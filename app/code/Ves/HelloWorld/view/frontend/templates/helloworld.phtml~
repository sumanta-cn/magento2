<script type="text/javascript">
require([
    'jquery',
    'mage/mage'
], function($){
 
   var dataForm = $('#orderform');
   dataForm.mage('validation', {});
 
});
</script>
<script type="text/javascript">

		/*Submit Function */
		require(["jquery"], function ($) {
    	$(document).ready(function () {	
    		$('.presubmit').click(function () {
    			alert("test");
    			var dataString = $('#orderform').serialize();
    			//$jj = $.validator.validateElement($('#orderform'));
    			//if($jj)
    			if ($('#orderform').valid()) 
    			{
    			jQuery(this).attr('disabled','true');  
					jQuery.ajax({
					url : "https://localhost/magentovtwo/helloworld/index_index/saverequestquote",
					type : "POST",
					data : dataString,
					success : function(response) {
						jQuery(".presubmit").removeAttr('disabled');
					//	jQuery(".input-text").val('');
						jQuery("div.messages-pre > span").html(response); // append ajax response to message section	
					}
				  });
			}			
		});
		/*Cancel Click Function*/
	/*	jQuery(".precancel").click(function(){ 
		 	jQuery(".input-text").val('');			
		}); */
	});
	});
</script>
    


